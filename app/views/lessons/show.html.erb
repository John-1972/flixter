<br />

<div class="booyah-box col-10 offset-1"> <!-- Infobox, 10/12 of width, 1/12 indent -->
  <h1><%= current_lesson.title %></h1> <!-- Title -->
  <p class="float-left">
    <%= current_lesson.subtitle %> <!-- Subtitle, floated to the left -->
  </p>

  <% if current_lesson.next_lesson.present? %> <!-- If there is a lesson after this one... -->
    <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-primary float-right' do %>
      Next Lesson &nbsp; <!-- ...display a 'next lesson' btn, floated to the right -->
      <span class="fa fa-forward"></span> <!-- Fast-forward icon -->
    <% end %> <!-- end link -->
  <% end %> <!-- end if -->

  <br class="clr" /> <!-- clearfix -->
  <br />

  <video id="my-video" class="video-js vjs-big-play-centered vjs-fluid" controls preload="auto"
  poster="<%= image_path('black.jpg') %>" data-setup="{}"> <!-- Container for video -->
    <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
    <noscript>
      <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
      </p>
    </noscript>
  </video> <!-- id="my-video" -->
</div> <!-- class="booyah-box" -->