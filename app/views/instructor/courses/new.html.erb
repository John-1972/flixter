<!-- HTML for page allowing instructors to add a new course title to the database -->
<br />
<div class="booyah-box col-10 offset-1"> <!-- Infobox, 10/12 screen width, 1/10 indent -->
  <h1>Add a new course</h1>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cost %>
    <%= f.input :image %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %> <!-- end form -->
  <br />
</div> <!-- class="booyah-box" -->